{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":preserveSemverRanges"
  ],
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "schedule": [
    "before 6am on monday"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ],
    "assignees": [
      "@sudo-Tiz"
    ]
  },
  "packageRules": [
    {
      "matchCategories": [
        "golang"
      ],
      "enabled": true
    },
    {
      "description": "Group Go minor updates",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Go dependencies (non-major)"
    },
    {
      "description": "Separate major updates for review",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "major-update"
      ]
    },
    {
      "description": "Auto-merge non-major GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Group Docker updates",
      "matchDatasources": [
        "docker"
      ],
      "groupName": "Docker dependencies"
    }
  ],
  "ignoreDeps": [
    "github.com/sudo-Tiz/dns-tester-go"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ]
}
